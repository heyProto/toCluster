{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {},
  "id": "http://example.com/example.json",
  "properties": {
    "data": {
      "id": "/properties/data",
      "properties": {
        "title": {
          "id": "/properties/data/properties/title",
          "title": "Title",
          "type": "string",
          "minLength": 50,
          "maxLength": 140
        },
        "by_line": {
          "id": "/properties/data/properties/by_line",
          "title": "By line",
          "type": "string"
        },
        "published_date": {
          "id": "/properties/data/properties/published_date",
          "title": "Publised date",
          "type": "string",
          "format": "date"
        },
        "links": {
          "id": "/properties/data/properties/links",
          "title": "Links",
          "items": {
            "id": "/properties/data/properties/links/items",
            "title": "Link",
            "hideTitle": true,
            "separator": "#",
            "properties": {
              "link": {
                "id": "/properties/data/properties/links/items/properties/link",
                "title": "Link",
                "type": "string"
              },
              "favicon_url": {
                "id": "/properties/data/properties/links/items/properties/favicon_url",
                "title": "Favicon URL",
                "type": "string"
              },
              "publication_name": {
                "id": "/properties/data/properties/links/items/properties/publication_name",
                "title": "Publication name",
                "type": "string"
              }
            },
            "required": [
              "link"
            ],
            "minItems": 1,
            "addButtonText": "Add a new link",
            "type": "object"
          }
        },
        "analysis": {
          "id": "/properties/data/properties/analysis",
          "title": "Analysis",
          "type": "string",
          "minLength": 300,
          "maxLength": 390
        }
      },
      "type": "object",
      "required": ["title", "by_line", "published_date"]
    }
  },
  "type": "object"
}